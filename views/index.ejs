<!DOCTYPE html>
<html lang="en">
  <%- include('partials/header.ejs') %> <%- include('partials/nav.ejs') %>
  <body>
    <div class="container">
      <h1 class="text-center mt-5">Perguntas</h1>

      <a href="/perguntas" class="btn btn-dark mb-3">Fazer Pergunta</a>

      <% questions.forEach(function(question) { %>
      <div class="card">
        <div class="card-body" id="question-card">
          <h1 class="text-center"><%= question.title %></h1>
          <button
            class="btn btn-dark toggle-button"
            data-id="<%= question.id %>"
          >
            +
          </button>
        </div>

        <div
          class="card-body d-none my-description"
          id="extra-<%= question.id %>"
        >
          <hr />
          <p><%= question.description %></p>
        </div>

        <div class="card-footer">
          <button
            class="btn btn-dark"
            onclick="window.location.href='/pergunta/<%= question.id %>'"
          >
            Responder
          </button>
        </div>
      </div>
      <% }); %>
    </div>
  </body>
  <%- include('partials/scripts.ejs') %>
</html>
